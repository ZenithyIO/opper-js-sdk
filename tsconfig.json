{
  "include": [
    "./packages"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "strict": true,
    "lib": [
      "es2022"
    ],
    "skipLibCheck": true,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "paths": {
      "@opper/core": [
        "packages/core/src"
      ],
      "@opper/wx": [
        "packages/wx/src"
      ],
      "@opper/capacitor": [
        "packages/capacitor/src"
      ]
    }
  }
}
